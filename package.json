{
  "author": {
    "name": "Larbi Asmaoui",
    "email": "mail@example.com"
  },
  "name": "mail-extractor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "electron": "npx electron electron.js",
    "dev": "vite",
    "build:svelte": "vite build",
    "build": "vite build && electron-builder --linux",
    "build:deb": "vite build && electron-builder --linux deb",
    "build:appimage": "vite build && electron-builder --linux AppImage",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "svelte": "^5.36.13",
    "vite": "^7.0.4",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "cf-email-decode": "^0.0.7",
    "he": "^1.2.0",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.54.1"
  },
  "build": {
    "appId": "com.larbi.mailextractor",
    "productName": "MailExtractor",
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "scraper.js",
      "scraper-playwright.js",
      "package.json",
      "node_modules/**/*"
    ],
    "linux": {
      "icon": "public/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "asar": true
  },
  "main": "electron.js"
}
